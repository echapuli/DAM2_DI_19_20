<Window x:Class="AplicacionVideo7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="360" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="DataGridLibros" ItemsSource="{Binding Path=listaLibros}" Height="235" Margin="10,45,10,0" VerticalAlignment="Top"/>
        <Menu Height="25" VerticalAlignment="Top" Margin="0,0,10,0">
            <MenuItem Header="Archivo" Click="MenuItem_Click_1">
                <MenuItem x:Name="NuevoMenuItem" Header="Nuevo..." HorizontalAlignment="Left" Width="145"/>
            </MenuItem>
        </Menu>
        <Button x:Name="ButtonModificar" Content="Modificar" Margin="432,0,10,10" Click="ButtonModificar_Click" Height="24" VerticalAlignment="Bottom"/>


    </Grid>
</Window>
