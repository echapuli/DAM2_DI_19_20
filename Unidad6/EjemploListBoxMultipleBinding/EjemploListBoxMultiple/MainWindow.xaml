<Window x:Class="EjemploListBoxMultiple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="396" Width="525" ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="ListBox1" ItemsSource="{Binding Path=ListaDeportes}" HorizontalAlignment="Left" Height="180" VerticalAlignment="Top" Width="517" SelectionMode="Multiple" SelectionChanged="ListBox1_SelectionChanged"/>
        <ListBox x:Name="ListBox2" ItemsSource="{Binding Path=ListaSeleccion}" HorizontalAlignment="Left" Height="180" VerticalAlignment="Top" Width="517" Margin="0,185,0,-46"/>
    </Grid>
</Window>
